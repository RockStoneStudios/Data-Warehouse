    <div class="card bg-dark">
        <div class="card-header">
            <h3 class="lead text-light">LogIn</h3>
             <form action="/login" method="POST">
                <div class="card-body">
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Ingrese Email">
                    </div>
                    <div class="email-error"></div>
                    <div class="form-group">
                         <input type="password" class="form-control" name="password" placeholder="Ingrese Password">
                    </div>
                     <div class="password-error"></div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-block" value = "Iniciar Seccion">
                    </div>
                </div> 
                <input type="hidden" name="token" value="">
             </form>
        </div>
    </div>
</div>
